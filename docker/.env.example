# Docker Environment Configuration

# Application
NODE_ENV=development
PORT=3000
CHOKIDAR_USEPOLLING=true

# React Development
BROWSER=none
REACT_APP_TITLE=Training Hub (Docker Dev)
REACT_APP_DESCRIPTION=Interactive training and quiz platform - Docker Development Environment

# Supabase Configuration
REACT_APP_SUPABASE_URL=http://localhost:54322
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=54322

# Email Testing (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_MAX_RETRIES=3

# Feature Flags
REACT_APP_ENABLE_STUDY_GUIDES=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true
REACT_APP_ENABLE_QUIZ_HISTORY=true

# Development Tools
REACT_APP_DEBUG_MODE=true
REACT_APP_API_MOCK=false

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=training-hub

# Container Resource Limits
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=2

# Volume Paths (relative to docker-compose.yml)
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis

# Build Arguments
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Container Health Check
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

# Note: This is a template for Docker development.
# Copy this file to .env in the project root and update values as needed.
# Do not commit sensitive values to version control.
